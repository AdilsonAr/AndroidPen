<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <ImageButton
        android:id="@+id/apuntes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/busca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/notas" />


    <ImageButton
        android:id="@+id/busca"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/apuntes"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ask" />

    <ImageButton
        android:id="@+id/busquedas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/agenda"
        app:layout_constraintStart_toStartOf="@+id/apuntes"
        app:layout_constraintTop_toBottomOf="@+id/apuntes"
        app:srcCompat="@drawable/busquedas2" />

    <ImageButton
        android:id="@+id/agenda"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        android:onClick="irAgenda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/busquedas"
        app:layout_constraintTop_toBottomOf="@+id/busca"
        app:srcCompat="@drawable/agenda_temp" />

    <ImageButton
        android:id="@+id/horario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/busquedas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/busquedas"
        app:srcCompat="@drawable/horario_temp" />

</androidx.constraintlayout.widget.ConstraintLayout>